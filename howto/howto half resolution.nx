
GLOBAL ENABLED
ENABLED=0

TOUCHSCREEN

BG 1
BG COPY 0,0,20,8 TO 0,0

ON RASTER CALL HALF

SUB HALF
IF ENABLED THEN SCROLL 1,0,-(RASTER+1)\2
END SUB

BG 0
TEXT 1,9,"SIMULATE A 160X64"
TEXT 1,10,"PIXELS SCREEN"
TEXT 1,11,"USING THE SCROLL"
TEXT 1,12,"COMMAND."

DO
TEXT 1,1,"HALF RESOLUTION IS"
IF ENABLED THEN
BG COPY 0,8,5,3 TO 7,3
ELSE
SCROLL 1,0,0
BG COPY 5,8,5,3 TO 7,3
END IF
WAIT VBL
IF TAP THEN ENABLED=NOT ENABLED
LOOP


